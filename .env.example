# Slack Bot設定（オプション - 空欄にするとSlackを無効化）
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token

# Discord Bot設定（オプション - 空欄にするとDiscordを無効化）
DISCORD_BOT_TOKEN=your-discord-bot-token

# サーバー設定
PORT=3000

# ログ設定
LOG_LEVEL=info        # debug, info, warn, error
LOG_FORMAT=human      # human または json

# デバッグモード
DEBUG=false

# Claude CLI設定（オプション）
# CLAUDE_COMMAND=claude
# CLAUDE_MAX_OUTPUT_SIZE=10485760 # 10MB（バイト）

# vibe-local連携設定（オプション）
# 前提: agent-chatbot.yml の tools.definitions に vibe-local を追加済みであること
# AGENT_CHATBOT_TOOLS_DEFAULTTOOL=vibe-local
# OLLAMA_HOST=http://localhost:11434
# VIBE_LOCAL_MODEL=qwen3:8b
# VIBE_LOCAL_SIDECAR_MODEL=qwen3:1.7b
# VIBE_LOCAL_DEBUG=1
# 必要に応じて（vibe-coder 側の上書き）
# VIBE_CODER_MODEL=qwen3:8b
# VIBE_CODER_SIDECAR=qwen3:1.7b
# VIBE_CODER_DEBUG=1
