{
  "app": {
    "name": "Claude Chatbot",
    "version": "1.0.0",
    "environment": "development"
  },
  "claude": {
    "command": "claude",
    "timeout": 900000,
    "maxOutputSize": 10485760,
    "dangerouslySkipPermissions": false,
    "forceAllowRoot": false,
    "runAsUser": null
  },
  "tools": {
    "defaultTool": "claude",
    "definitions": {
      "claude": {
        "command": "claude",
        "args": ["--print", "{prompt}"],
        "versionArgs": ["--version"],
        "description": "Anthropic Claude CLI",
        "supportsSkipPermissions": true
      }
    }
  },
  "server": {
    "port": 3000
  },
  "storage": {
    "dataFile": "channel-repos.json",
    "repositoriesDir": "repositories"
  },
  "logging": {
    "level": "info",
    "format": "human"
  }
}
