{
  "app": {
    "name": "Claude Slack App",
    "version": "1.0.0",
    "environment": "development"
  },
  "claude": {
    "command": "claude",
    "timeout": 900000,
    "maxOutputSize": 10485760
  },
  "server": {
    "port": 3000
  },
  "storage": {
    "dataFile": "channel-repos.json",
    "repositoriesDir": "repositories"
  },
  "logging": {
    "level": "info",
    "format": "human"
  }
}