{
  "name": "claude-chatbot",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "node ./node_modules/typescript/bin/tsc",
    "clean": "rm -rf dist",
    "typecheck": "node ./node_modules/typescript/bin/tsc --noEmit",
    "check": "npm run typecheck && npm test",
    "test": "npm run build && node --test \"dist/**/*.test.js\""
  },
  "keywords": ["claude", "slack", "discord", "bot", "ai", "assistant"],
  "author": "",
  "license": "MIT",
  "description": "Multi-platform bot that integrates Claude CLI with Slack and Discord, featuring Git repository context awareness",
  "dependencies": {
    "@slack/bolt": "^4.4.0",
    "@slack/web-api": "^7.9.2",
    "axios": "^1.9.0",
    "discord.js": "^14.16.3",
    "dotenv": "^16.5.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "@types/js-yaml": "^4.0.9",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
